<Window x:Class="new_tech.ViborProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:new_tech"
        mc:Ignorable="d"
            Title="Продукция" Height="520" Width="600" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Label Content="Партнер:" HorizontalAlignment="Left" Margin="10, 30, 0, 0" FontSize="20" FontFamily="Bahnschrift Light SemiCondensed" FontWeight="Bold"/>
        <Label x:Name="PartnerP" Margin="120, 30, 0, 0" HorizontalAlignment="Left" FontSize="20" FontFamily="Bahnschrift Light SemiCondensed"/>

        <Label Content="Продукция" HorizontalAlignment="Center" Margin="0,0,0,0" FontSize="24" FontFamily="Bahnschrift Light SemiCondensed"/>

        <Grid Grid.Row="1" Background="#BBDCFA">
            <Label  Width="120" Margin="5, 5, 0, 0" Height="40" Content="Продукция:" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
            <ComboBox x:Name="NameProduct" Grid.Row="1" Width="390" Height="40" HorizontalAlignment="Left" Margin="140, 5, 0, 0" FontSize="20" VerticalAlignment="Top" SelectionChanged="NameProduct_SelectionChanged" FontFamily="Bahnschrift Light SemiCondensed"/>
            <Label  Width="290" Margin="5, 55, 0, 0" Height="40" Content="Мин стоимость для партнера:" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
            <Label x:Name="costlb" Width="150" Margin="300, 55, 0, 0" Height="40" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
            <Label  Width="200" Margin="5, 105, 0, 0" Height="40" Content="Введите количество:" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
            <TextBox x:Name="Kolvo"  Width="125" Margin="235, 105, 0, 0" Height="40" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>

            <Label x:Name="MaterialResult" Width="520" Margin="10, 160, 0, 0" Height="80" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Content="" FontFamily="Bahnschrift Light SemiCondensed"/>
        </Grid>

        <Button x:Name="Vvesti" Grid.Row="2" Background="#0C4882" Content="Ввести количество" FontFamily="Bahnschrift Light SemiCondensed" FontSize="18" Width="200" Height="36" HorizontalAlignment="Left" Margin="5, 12,0,0" Click="Vvesti_Click"/>
        <Button x:Name="Back" Grid.Row="2" Background="#0C4882" Content="Назад" FontFamily="Bahnschrift Light SemiCondensed" FontSize="18" Width="150" Height="36" HorizontalAlignment="Right" Margin="0, 12,5,0" Click="Back_Click"/>
    </Grid>
</Window>
